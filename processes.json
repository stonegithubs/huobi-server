{
    "apps": [
        {
            "name": "huobi-server",
            "script": "./bin/www",
            "cwd": "./",
            "watch": [
                "app",
                "bin",
                "bin",
                "config",
                "mysql"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "env_production" : {
                "NODE_ENV": "production"
            },
            "error_file": "./logs/app-err.log",
            "out_file": "./logs/app-out.log",
            "log_date_format": "YYYY-MM-DD HH:mm ss"
        }
    ]
}